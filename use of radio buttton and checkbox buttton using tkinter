import tkinter as tk
root=tk.Tk()
root.title("hello world")
root.geometry("300x300")
gender=tk.StringVar()
tk.Radiobutton(root,text="Male",variable= gender,value="male").pack()
tk.Radiobutton(root,text="female",variable= gender,value="female").pack()
def show1():
    selected=gender.get()
    if selected=="":
        print("Select the Gender")
    else:
        print("select :",gender.get())

tk.Button(root,text="submit",command=show1).pack()
agree=tk.IntVar()


tk.Checkbutton(root,text="accept and continue",variable=agree).pack()
def show():
    print("Result :",agree.get())

tk.Button(root,text="show",command=show).pack()

root.mainloop()
