import tkinter as tk
from itertools import combinations_with_replacement
from tkinter import ttk
root =tk.Tk()
root.title("RadioButton Example")
root.geometry("400x500")

tk.Label(root,text="Name:").pack()
r1=tk.Entry(root)
r1.pack()

#radiobuttton
gender=tk.StringVar()
tk.Radiobutton(root,text="Male",variable= gender,value="male").pack()
tk.Radiobutton(root,text="female",variable= gender,value="female").pack()

#checkboxbutton
agree=tk.IntVar()
tk.Checkbutton(root,text="accept and continue",variable=agree).pack()

#dropdownlist
combo=ttk.Combobox(root,values=["fy","SY","TY"])
combo.current(0)
combo.pack()

#printing button
def show():
    print(gender.get())
    print(agree.get())
    print(combo.get())

tk.Button(root,text="show",command=show).pack()

root.mainloop()
